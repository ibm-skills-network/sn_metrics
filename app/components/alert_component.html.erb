<div x-data="{ open: true }">
  <div x-show="open" class="py-3"></div>
  <div x-show="open" class="rounded-md bg-<%= @color %>-50 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <%= heroicon @icon[:name], options: { class: "h-5 w-5 text-#{@color}-400", **@icon } %>
      </div>
      <div class="ml-3">
        <div class="text-sm font-medium text-<%= @color %>-700">
          <p><%= @message %></p>
          <%= content %>
        </div>
        <% if action.present? %>
          <div class="mt-4">
            <div class="-mx-2 -my-1.5 flex">
              <%= action %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="ml-auto pl-3">
        <div class="-mx-1.5 -my-1.5">
          <button @click="open = false" class="inline-flex bg-<%= @color %>-50 rounded-md p-1.5 text-<%= @color %>-500 hover:bg-<%= @color %>-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-<%= @color %>-50 focus:ring-<%= @color %>-600">
            <span class="sr-only">Dismiss</span>
            <!-- Heroicon name: solid/x -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
